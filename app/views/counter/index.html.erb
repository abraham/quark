<div class="mdl-layout-spacer"></div>

<div class="card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text" id="counter"><%= current_quark_count %></h2>
  </div>

  <div class="mdl-card__actions mdl-card--border">
    <% if @current_user %>
      <%= render 'form' %>
    <% else %>
      <%= link_to('Sign in to start counting', users_new_url, class: 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent') %>
    <% end %>
  </div>
</div>

<div class="mdl-layout-spacer"></div>
